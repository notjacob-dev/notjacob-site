<html lang="en">
  <head>
    <title>Rails 01 form</title>
    <style>
      html {
          background: #2b2a30;
      }
      form {
          margin: 0 auto;
          width: 700px;
          position: center;
          padding: 1em;
          border: 5px solid #730E15;
          border-radius: 25px;
          background: linear-gradient(#e66465, #9198e5);
      }
      ul {
          list-style: none;
          padding-left: 4px;
          margin: 0;
      }
      form li + li {
          margin-top: 1em;
      }
      input, textarea {
          font: 0.98em "Malgun Gothic";
          width: 300px;
          box-sizing: border-box;
          padding-left: 7px;
          border: 2px solid #2E2F30;
          border-radius: 15px;
      }
      input:focus, textarea:focus {
          border-color: #9198e5;
      }
      textarea::-webkit-scrollbar {
          width: 1em;
          color: #2E2F30;
          padding-left: 2px
      }
      input {
          padding-top: 3px;
      }
      textarea {
          vertical-align: top;
          padding-top: 7px;
          height: 5em;
      }
      .button {
          padding-left: 90px;
      }
      button {
          margin-left: .5em
      }
      label {
          display: inline-block;
          width: 90px;
          text-align: right;
          font-family: verdana, serif;
          font-weight: bold;
          text-shadow: 1px 1px #2E2F30;
          color: mediumaquamarine;
      }
    </style>
  </head>
  <body>

    <%= form_with(url: "/handle-form", method: "post") do %>
      <ul>
        <li>
          <%= label_tag(:name, "Name:") %>
          <%= text_field_tag(:name) %>
        </li>
        <li>
          <%= label_tag(:mail, "Email:") %>
          <%= email_field_tag(:email) %>
        </li>
        <li>
          <%= label_tag(:msg, "Message:") %>
          <%= text_area_tag(:message) %>
        </li>
        <li class="button">
          <%= button_tag(:submit,) %>
        </li>
      </ul>
    <% end %>
  </body>
</html>